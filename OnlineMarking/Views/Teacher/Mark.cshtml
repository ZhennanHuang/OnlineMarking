@model OnlineMarking.Models.Record
@{
    ViewBag.Title = "Mark";
}

<iframe name="frameMain" width="80%" height="450px" scrolling="auto" src="http://Result.cshtml"></iframe>

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Mark", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <h4>Mark a student uplaoded html file work here.</h4>
    <hr />

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <!-- student id number text label-->
    <div class="form-group">
        @Html.LabelFor(m => m.studentName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.studentName, new { @class = "form-control" })
        </div>
    </div>

    <!-- mark rank pulldown control-->
    <div class="form-group">
        @Html.Label("mark", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.marks, ViewData["marks"] as IEnumerable<SelectListItem>, " ")
            @Html.DropDownListFor(m=>m.marks,ViewBag.List as IEnumerable<SelectListItem>, " ")
        </div>
    </div>

    <!-- Review uploaded html file herer use iFrame-->

    <!-- feedback area textbox-->
    <div class="form-group">
        @Html.Label("feedback", new { @class = "col -md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.feedback, new { @class = "form-control" })
        </div>
    </div>

    <!-- Mark submit button-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Mark" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
