@model OnlineMarking.Models.Record
@{
    ViewBag.Title = "Mark";
}

<iframe name="frameMain" width="80%" height="450px" src="/@Model.filePath"></iframe>

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Mark", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Mark a student uplaoded html file work here.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <!-- student id number text label-->
    <div class="form-group">
        @Html.LabelFor(model => model.studentName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
        @Html.TextBoxFor(model=>model.studentName, new { @Value = Model.studentName,@Readonly="true"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.fileName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.fileName, new { @Value = Model.fileName, @Readonly = "true" })
        </div>
    </div>

    <!-- mark rank pulldown control-->
    <div class="form-group">
        @Html.LabelFor(model => model.marks, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.marks,ViewData["marks"] as IEnumerable<SelectListItem>," ")
        </div>
    </div>

    <!-- Review uploaded html file herer use iFrame-->

    <!-- feedback area textbox-->
    <div class="form-group">
        <div>
            @Html.LabelFor(model => model.feedback, new { @class = "col -md-2 control-label" })
        </div>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.feedback, new { @class = "form-control" })
        </div>
    </div>

    <!-- Mark submit button-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="submit"type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
