@model OnlineMarking.Models.Record[]
@{
    ViewBag.Title = "RecordList";
}
<table>
    <tr><th>student</th><th>fileName</th><th>mark</th></tr>
    @using (Html.BeginForm("Mark", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        
        <input id="button" type="submit" value="upload" />
    }
    @foreach (var r in @Model)
    {
        <tr>
            <td>@r.studentName</td>
            <td>@r.fileName</td>
            @if (r.marks == "")
            {
            <td> No Result; </td>}
            else
            {
            <td>  r.marks; </td>}
            @using (Html.BeginForm("Mark", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="hidden" id="recordid" name="recordid" value="@r.ID"/>
                <input id="button" type="submit" value="upload" />
            }
        </tr>
    }
</table>